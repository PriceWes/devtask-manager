{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "Node",
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        },
        "jsx": "react-jsx",
        "allowSyntheticDefaultImports": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}